{
  "manifest_version": 2,
  "name": "Test Pilot",
  "author": "Les Orchard <me@lmorchard.com>, Dave Justice <djustice@mozilla.com>",
  "applications": {
    "gecko": {
      "id": "@testpilot-addon",
      "update_url": "https://testpilot.firefox.com/files/@testpilot-addon/updates.json"
    }
  },
  "version": "3.0.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png"
  },
  "default_locale": "en_US",
  "permissions": [
    "alarms",
    "management",
    "notifications",
    "storage",
    "cookies",
    "tabs",
    "https://example.com/",
    "https://testpilot.dev.mozaws.net/",
    "https://testpilot-l10n.dev.mozaws.net/",
    "https://testpilot.stage.mozaws.net/",
    "https://testpilot.firefox.com/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Firefox Test Pilot",
    "browser_style": true,
    "default_icon": "icons/icon.svg"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  }
}
