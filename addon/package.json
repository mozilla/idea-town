{
  "title": "Idea Town Addon",
  "name": "idea-town-addon",
  "version": "0.2.1",
  "private": true,
  "description": "The addon where ideas come to idea",
  "repository": "mozilla/idea-town-addon",
  "main": "index.js",
  "author": "Mozilla (https://mozilla.org/)",
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "scripts": {
    "lint": "eslint .",
    "start": "jpm run -b /usr/bin/firefox --prefs dev-prefs.json",
    "package": "jpm xpi && mv @idea-town-addon-$npm_package_version.xpi dist/idea-town-addon-$npm_package_version.xpi"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "idea-town": "^0.3.0",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.0",
    "eslint": "^1.2.1",
    "eslint-config-airbnb": "^0.0.8",
    "eslint-config-idea-town": "^1.2.0",
    "jpm": "^1.0.1"
  },
  "preferences": [
    {
      "name": "BASE_URL",
      "title": "Idea town protocol",
      "description": "protocol",
      "type": "string",
      "value": "https://ideatown.firefox.com"
    },
    {
      "name": "BADGE_COLOR",
      "title": "Idea town Badge Color",
      "description": "Hex color of the ideatown badge",
      "type": "string",
      "value": "#00AAAA"
    },
    {
      "name": "ALLOWED_ORIGINS",
      "title": "Allowed origins for addon",
      "description": "Allowed origins for addon",
      "type": "string",
      "value": "https://ideatown.firefox.com/*"
    },
    {
      "name": "HOSTNAME",
      "title": "Idea town Hostname",
      "description": "hostname",
      "type": "string",
      "value": "ideatown.firefox.com"
    },
    {
      "name": "IDEATOWN_PREFIX",
      "title": "Idea town namespace",
      "description": "Idea town namespace for metric events",
      "type": "string",
      "value": "ideatown.addon.MAIN."
    }
  ]
}
