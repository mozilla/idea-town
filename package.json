  "scripts": {
    "bootstrap": "npm install && cd addon && npm install && cd .. && gulp",
    "start": "cross-env NODE_ENV=development ENABLE_DEV_LOCALES=1 ENABLE_DEV_CONTENT=1 npm-run-all build:json build:gulp watch",
    "watch": "npm-run-all --parallel watch:*",
    "watch:gulp": "gulp watch",
    "watch:webpack": "webpack-dev-server --watch --progress --colors",
    "watch:lint": "npm-run-all --parallel watch:lint:*",
    "watch:lint:styles": "onchange -p -v 'frontend/src/styles/**/*.scss' 'frontend/src/app/**/*.scss' -- sass-lint --verbose {{changed}}",
    "watch:lint:js": "onchange -p -v ./gulpfile.babel.js ./webpack.config.js './frontend/{src,tests}/**/*.{js,jsx}' -- eslint {{changed}}",
    "build:json": "node bin/build-content-json.js",
    "build:gulp": "gulp build",
    "build:gulp-dist": "gulp dist-build",
    "build:webpack": "webpack -p",
    "analyzer": "cross-env ANALYZER=1 webpack --watch --progress --colors",
    "server": "node ./bin/dev-server.js",
    "server:dist": "cross-env STATIC_ROOT=dist node ./bin/dev-server.js",
    "static": "cross-env NODE_ENV=production npm-run-all build:json build:webpack build:gulp build:gulp-dist",
    "docs": "doctoc README.md && doctoc addon/README.md",
    "lint": "npm-run-all lint:*",
    "lint:styles": "sass-lint --verbose 'frontend/src/styles/**/*.scss' 'frontend/src/app/**/*.scss'",
    "lint:js": "eslint ./gulpfile.babel.js ./webpack.config.js './frontend/{src,tests}/**/*.{js,jsx}'",
    "test": "cd frontend && mocha --require babel-register --require test-setup.js --recursive \"test\" \"src/**/tests.js\"",
    "flow": "flow frontend",
    "l10n:extract": "node bin/extract-strings.js",
    "l10n:check": "npm run l10n:extract && git diff-files --quiet --ignore-all-space locales && echo 'No missing strings'",
    "test:ci": "cross-env NODE_ENV=test nyc mocha --recursive --reporter mocha-junit-reporter --require frontend/test-setup.js frontend/test 'frontend/src/**/tests.js'",
    "test:watch": "npm test -- --watch",
    "test:all": "npm-run-all lint flow test flow-coverage && cd addon && npm-run-all lint test && tox -e ui-tests",
    "coverage": "cross-env NODE_ENV=test nyc mocha --recursive --require frontend/test-setup.js frontend/test",
    "flow-coverage": "cd frontend && flow-coverage-report --threshold 50 -i 'src/**/*.js' -t html -o coverage/flow",
    "addon:locales": "gulp addon-copy-locales",
    "package": "cd addon && npm install && npm run package && cp addon.xpi ..",
    "content": "gulp content-build",
    "storybook": "start-storybook -s ./frontend/build -p 6006",
    "build-storybook": "build-storybook -o ./frontend/build/storybook"
  }
}
