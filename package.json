    "ampersand-model": "7.0.0",
    "ampersand-rest-collection": "^5.0.0",
    "ampersand-router": "^3.0.2",
    "ampersand-state": "5.0.1",
    "ampersand-view": "10.0.0",
    "ampersand-view-switcher": "^2.0.0",
    "babel-polyfill": "^6.9.1",
    "clipboard": "^1.5.12",
    "domready": "^1.0.8",
    "es6-promise": "^3.0.2",
    "isomorphic-fetch": "^2.1.1",
    "js-cookie": "2.1.1",
    "l20n": "4.0.0-alpha.3",
    "micro-email-validator": "0.0.1",
    "mustache": "^2.1.3"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-eslint": "^4.1.8",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "budo": "^7.1.0",
    "coverify": "^1.4.1",
    "del": "2.0.2",
    "doctoc": "1.0.0",
    "eslint-config-airbnb": "0.0.8",
    "faucet": "0.0.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^2.3.1",
    "gulp-cache": "^0.2.10",
    "gulp-connect": "^2.2.0",
    "gulp-cssnano": "2.1.0",
    "gulp-eslint": "^1.0.0",
    "gulp-if": "^1.2.5",
    "gulp-multi-dest": "0.0.4",
    "gulp-rename": "^1.2.2",
    "gulp-rev-all": "^0.8.24",
    "gulp-sass": "^2.0.4",
    "gulp-sass-lint": "^1.1.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.2.0",
    "gulp-util": "^3.0.6",
    "merge-stream": "^1.0.0",
    "node-normalize-scss": "1.1.1",
    "node-sass": "3.4.2",
    "remarkable": "1.6.2",
    "require-globify": "^1.3.0",
    "run-sequence": "^1.1.2",
    "sass-lint": "1.5.1",
    "tape": "^4.4.0",
    "tape-around": "2.2.0",
    "tape-catch": "1.0.4",
    "tape-dom": "0.0.10",
    "testling": "^1.7.1",
    "through2": "2.0.1",
    "try-require": "1.2.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "yamljs": "^0.2.8"
  },
  "directories": {
    "doc": "docs"
  },
  "homepage": "https://github.com/mozilla/testpilot#readme",
  "license": "MPL-2.0",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/testpilot.git"
  },
  "scripts": {
    "start": "gulp static-only-server",
    "static": "gulp static",
    "build": "gulp build",
    "docs": "doctoc README.md && doctoc addon/README.md",
    "lint": "gulp lint sass-lint",
    "test": "npm run test:general && npm run test:client",
    "test:general": "tape testpilot/frontend/static-src/test/general.js | faucet",
    "test:client": "browserify -t babelify testpilot/frontend/static-src/test/**/*.js | testling | faucet",
    "test:browser": "budo testpilot/frontend/static-src/test/browser.js:bundle.js --verbose -- -t babelify -t require-globify",
    "test:browser:live": "budo testpilot/frontend/static-src/test/browser.js:bundle.js --verbose --live -- -t babelify -t require-globify",
    "test:cov": "browserify -t babelify -t coverify testpilot/frontend/static-src/test/**/*.js | node | coverify"
  }
}
